pipeline{
        agent any
        stages{
                stage("Cleaning Stage") {
                        steps{ 
                              echo "Cleaning Stage"
                              bat "mvn clean"
                              }
                  }
                  stage("Testing Stage") {
                        steps{
                              echo "Testing Stage"
                              bat "mvn test"
                              }
                   }
                   stage("Packaging Stage") {
                          steps{
                              echo "Packaging Stage"
                              bat "mvn package"
                              }
                      }
                   stage ("Consolidate Results") {
                    steps{
                          input ("Do you want to capture results?")
                          junit'**/target/surefire-reports/Test-*-.xml'
                          archive 'target/*.jar'
                          }
                    }
               }
         }
